{% extends 'AppBundle::layout.html.twig' %}

{% block content %}

    <div class="row">
        <div id="map" style="height: 100%; position: static !important; overflow: hidden; width: 100%;"></div>        
    </div>

{% endblock %}

{% block javascript %}
    {{ parent() }}

   <script>
      var map;
      function initMap() {
       var  map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: 40.4214106, lng: 3.6764945},
          zoom: 8
        });
        var locations = [
            ['Bondi Beach', -33.890542, 151.274856, 4],
            ['Coogee Beach', -33.923036, 151.259052, 5],
            ['Cronulla Beach', -34.028249, 151.157507, 3],
            ['Manly Beach', -33.80010128657071, 151.28747820854187, 2],
            ['Maroubra Beach', -33.950198, 151.259302, 1]
        ];
        var infowindow = new google.maps.InfoWindow();

        var marker, i;

        for (i = 0; i < locations.length; i++) {  
        marker = new google.maps.Marker({
            position: new google.maps.LatLng(locations[i][1], locations[i][2]),
            map: map
        });

        google.maps.event.addListener(marker, 'click', (function(marker, i) {
            return function() {
            infowindow.setContent(locations[i][0]);
            infowindow.open(map, marker);
            }
        })(marker, i));
      }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key={{ google_api_places }}&callback=initMap"
    async defer></script>
{% endblock %}

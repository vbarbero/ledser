{% extends 'AppBundle::layout.html.twig' %}

{% block content %}

    <table class=" bg-dark text-light">
        <tr>
        <td>id</td>
        <td>Name</td>
        {% if drawee is defined %}
            <td>rating</td>
        {% endif %}
        <td>nominal</td>
        <td>r.vivo</td>
        <td lass="col">r.vencido</td>
        <td>ingreso</td>
        <td>honorarios</td>
        <td>dias</td>
        <td>tae</td>
        <td>tae ledser</td>
        <td>total</td>
        <td>action</td>
        </tr>
    {% for company in proposalGroup | reverse %}
    <tr class="{% if loop.index is odd %}bg-secondary{% endif %}">
        <td>{{ loop.index }}</td>
        <td><a href="{{ url('list_files', {company: company.id}) }}"> {{ company.name }}</a> </td>
        {% if drawee is defined %}
            <td>{{ company.rating }}</td>
        {% endif %}
        <td>{{ company.nominal }}</td>
        <td>{{ company.vivo }}</td>
        <td>{{ company.muerto }}</td>
        <td>{{ company.ingreso }}</td>
        <td>{{ company.honorarios }}</td>
        <td>{{ (company.dias / company.num) | number_format(2) }}</td>
        <td>{{ (company.tae / company.num) | number_format(2) }}</td>
        <td>{{ (company.taeLedser / company.num) | number_format(2) }}</td>
        <td>{{ (company.total / company.num) | number_format(2) }}</td>
        <td>
            <a href="{{ url('add_file', {company: company.id}) }}">Add file</a>
            <a href="{{ url('edit_company', {company: company.id}) }}">Edit</a>
            <a data-href="{{ url('delete_company', {company: company.id}) }}" class="delete">Delete</a>
        </td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}

{% block javascript %}
    {{ parent() }}

    <script type="text/javascript">
        $(function () {
            $(".delete").on('click', function() {
                if (confirm('Are you sure you want to delete it?')) {
                    document.location = $(this).attr('data-href');
                    return true;
                } else {
                    return false;
                }
            });
        });
    </script>
{% endblock %}

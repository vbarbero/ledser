{% extends 'AppBundle::layout.html.twig' %}

{% block content %}

    <div class="row bg-dark text-light">
        <div class="w-100"></div>
        <div class="col">id</div>
        <div class="col">Name</div>
        {% if drawee is defined %}
            <div class="col">rating</div>
        {% endif %}
        <div class="col">nominal</div>
        <div class="col">r.vivo</div>
        <div class="col">r.vencido</div>
        <div class="col">ingreso</div>
        <div class="col">honorarios</div>
        <div class="col">dias</div>
        <div class="col">tae</div>
        <div class="col">total</div>
        <div class="col">action</div>
    </div>
    {% for company in proposalGroup %}
    <div class="row {% if loop.index is odd %}bg-secondary{% endif %}">
        <div class="col">{{ loop.index }}</div>
        <div class="col"><a href="{{ url('list_files', {company: company.id}) }}"> {{ company.name }}</a> </div>
        {% if drawee is defined %}
            <div class="col">{{ company.rating }}</div>
        {% endif %}
        <div class="col">{{ company.nominal }}</div>
        <div class="col">{{ company.vivo }}</div>
        <div class="col">{{ company.muerto }}</div>
        <div class="col">{{ company.ingreso }}</div>
        <div class="col">{{ company.honorarios }}</div>
        <div class="col">{{ (company.dias / company.num) | number_format(2) }}</div>
        <div class="col">{{ (company.tae / company.num) | number_format(2) }}</div>
        <div class="col">{{ (company.total / company.num) | number_format(2) }}</div>
        <div class="col">
            <a href="{{ url('add_file', {company: company.id}) }}">Add file</a>
            <a href="{{ url('edit_company', {company: company.id}) }}">Edit</a>
            <a data-href="{{ url('delete_company', {company: company.id}) }}" class="delete">Delete</a>
        </div>
        </div>
    {% endfor %}
{% endblock %}

{% block javascript %}
    {{ parent() }}

    <script type="text/javascript">
        $(function () {
            $(".delete").on('click', function() {
                if (confirm('Are you sure you want to delete it?')) {
                    document.location = $(this).attr('data-href');
                    return true;
                } else {
                    return false;
                }
            });
        });
    </script>
{% endblock %}
